<p id="notice"><%= notice %></p>

<div class="top">
  <h1>Listing Actors</h1>
  <%= link_to 'New Actor', new_actor_path, class: 'btn' %>
</div>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Age</th>
      <th>Bio</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.fullname %></td>
        <td><%= actor.age %></td>
        <td><%= actor.short_bio %></td>
        <td><%= actor.image %></td>
        <td><%= link_to 'Show', actor %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: 'delete_actor' %></td>
      </tr>
    <% end %>
  </tbody>
</table>