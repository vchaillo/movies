<p id="notice"><%= notice %></p>

<div class="top">
  <h1>Listing Movies</h1>
  <%= link_to 'New Movie', new_movie_path, class: 'btn' %>
</div>

<table>
  <thead>
    <tr>
      <th>Title vo</th>
      <th>Title vf</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Quality</th>
      <th>Language</th>
      <th>Bw</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title_vo %></td>
        <td><%= movie.title_vf %></td>
        <td><%= movie.year %></td>
        <td><%= movie.duration %></td>
        <td><%= movie.quality %></td>
        <td><%= movie.language %></td>
        <td><%= movie.bw %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: 'delete_movie' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

